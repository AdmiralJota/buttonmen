{
  # Restrictions for JSHint to enforce
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "indent": 2,
  "latedef": true,
  "maxlen": 80,
  "newcap": true,
  "noarg": true,
  "noempty": true,
  "nonew": true,
  "quotmark": true,
  "undef": true,
  "unused": true,
  "trailing": true,

  # Environment properties for jshint to assume exist
  "browser": true,
  "jquery": true
}
